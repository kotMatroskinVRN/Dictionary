<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="560.0" prefWidth="320.0"
            xmlns="http://javafx.com/javafx/8"
            stylesheets="style/main_window.css"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="home.fifteen.dictionary.controller.MainWindowController"
            fx:id="borderPane">
   <top>
      <FlowPane  BorderPane.alignment="CENTER">
         <Button mnemonicParsing="false" text="Dictionary" onAction="#switchScene"/>
      </FlowPane>
   </top>
   <bottom>
      <HBox fx:id="bottomPane" BorderPane.alignment="CENTER" >
         <Label  text="Total : "/>
         <Label fx:id="rightAnswers" text="Label"/>
         <Label text="In a Row : "/>
         <Label fx:id="rightInaRow" text="Label"/>
      </HBox>
   </bottom>
   <center>
      <SplitPane dividerPositions="0.1" orientation="VERTICAL"
                 BorderPane.alignment="CENTER">
         <HBox>
            <Label id="question" fx:id="question" text="Label"/>
         </HBox>
         <VBox>
            <Button fx:id="answer1" text="Button" onAction="#checkAnswer"/>
            <Button fx:id="answer2" text="Button" onAction="#checkAnswer"/>
            <Button fx:id="answer3" text="Button" onAction="#checkAnswer"/>
            <Button fx:id="answer4" text="Button" onAction="#checkAnswer"/>
            <Button fx:id="answer5" text="Button" onAction="#checkAnswer"/>
         </VBox>
      </SplitPane>
   </center>
</BorderPane>
